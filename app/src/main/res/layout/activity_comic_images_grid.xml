<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_comic_images_grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.informationworks.learnaptcomic.Activities.ComicImagesGridActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:gravity="right"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/grid_image_title"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="10dp"
                />


            <ImageButton
                android:id="@+id/close_button"
                android:src="@drawable/close"
                android:layout_alignParentRight="true"
                android:onClick="onCloseGrid"
                android:background="@color/colorPrimary"
                android:layout_height="50dp"
                android:layout_width="50dp"/>
        </RelativeLayout>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/comic_image_grid_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</RelativeLayout>
