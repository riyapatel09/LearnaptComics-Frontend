<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_comic_image_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context="in.informationworks.learnaptcomic.Activities.ComicImagePlayerActivity">


    <in.informationworks.learnaptcomic.Views.HackyViewPager
        android:id="@+id/comic_image_player_viewpager"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    </in.informationworks.learnaptcomic.Views.HackyViewPager>

    <RelativeLayout
        android:id="@+id/relative_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/linearCustomAppbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            android:orientation="horizontal"
            android:gravity="right">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/closeButton"
                    android:layout_width="50dp"
                    android:src="@drawable/close"
                    android:onClick="onCloseClick"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimary"
                    android:layout_alignParentLeft="true"
                    />

                <TextView
                    android:id="@+id/textView_custom_appbar_title"
                    android:text="ComicName"
                    android:textColor="#ffffff"
                    android:textSize="18dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/closeButton"/>

                <TextView
                    android:id="@+id/current_image_no"

                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/textView_custom_appbar_title"
                    android:layout_toRightOf="@+id/closeButton"
                    android:layout_marginRight="2dp"/>

                <TextView
                    android:id="@+id/text"
                    android:text="of"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/textView_custom_appbar_title"
                    android:layout_toRightOf="@+id/current_image_no"
                    android:layout_marginRight="2dp"/>

                <TextView
                    android:id="@+id/total_images"
                    android:text="10"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/textView_custom_appbar_title"
                    android:layout_toRightOf="@+id/text"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:src="@drawable/grid"
                    android:onClick="onGridViewClick"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorPrimary"/>


            </RelativeLayout>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/next_previous_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#1A000000"
            android:layout_alignParentBottom="true"
            app:layout_scrollFlags="scroll|enterAlways"
            android:orientation="horizontal"
            android:gravity="right">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="50dp"
                    android:src="@drawable/back"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:background="#99000000"
                    android:onClick="onBackClick"

                    />
                <ImageButton
                    android:id="@+id/next_button"
                    android:layout_width="50dp"
                    android:src="@drawable/forward"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:background="#99000000"
                    android:onClick="onNextClick"
                    />


            </RelativeLayout>
        </LinearLayout>




    </RelativeLayout>
</RelativeLayout>
