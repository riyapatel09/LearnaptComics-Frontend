<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_comic_image_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@android:color/black"
    tools:context="in.informationworks.learnaptcomic.Activities.ComicImagePlayerActivity">


    <in.informationworks.learnaptcomic.Views.HackyViewPager
        android:id="@+id/comic_image_player_viewpager"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    </in.informationworks.learnaptcomic.Views.HackyViewPager>

    <RelativeLayout
        android:id="@+id/relative_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/linearCustomAppbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorRed"
            app:layout_scrollFlags="scroll|enterAlways"
            android:orientation="horizontal"
            android:gravity="right">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_custom_appbar_title"
                    android:text="hello"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

                <TextView
                    android:id="@+id/textView_custom_appbar_subTitle"
                    android:text="android"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_custom_appbar_title"
                    android:layout_width="wrap_content" />
                <Button
                    android:text="G"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:onClick="onGridViewClick"/>
            </RelativeLayout>
        </LinearLayout>



    </RelativeLayout>

    </RelativeLayout>
