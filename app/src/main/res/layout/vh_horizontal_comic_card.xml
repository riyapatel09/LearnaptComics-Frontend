<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/horizontal_comic_card"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:layout_margin="4dp"
    app:cardElevation="2dp">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <ImageView
        android:layout_width="107dp"
        android:layout_height="match_parent"
        android:id="@+id/invisible_imageview"
        android:visibility="invisible"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/horizontal_comic_card_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/horizontal_comic_card_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/invisible_imageview"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/page_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/invisible_imageview"
        android:layout_below="@+id/horizontal_comic_card_text"
        android:text="10"
        android:textSize="14sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/page_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontal_comic_card_text"
        android:layout_toRightOf="@+id/page_count"
        android:text="Pages"
        android:textSize="14sp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="3dp" />

    <ImageView
        android:id="@+id/favourites_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/filledfavourite"
        android:layout_below="@+id/page_count"
        android:layout_toRightOf="@id/invisible_imageview"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/favourite_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40"
        android:textSize="14sp"
        android:layout_below="@+id/page_count_label"
        android:layout_toRightOf="@id/favourites_button"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="2dp"/>


    <TextView
        android:id="@+id/free_paid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="FREE"
        android:layout_marginRight="20dp"
        android:paddingBottom="20dp"
        android:textSize="15sp"
        android:textColor="#4CAF50"
        />





</RelativeLayout>
</android.support.v7.widget.CardView>