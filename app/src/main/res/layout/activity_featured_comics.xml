<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_featured_comics"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="in.informationworks.learnaptcomic.Activities.FeaturedComicsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/featured_comics_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/CustomComicsBar"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:layout_below="@id/featured_comics_toolbar">


        <fr.castorflex.android.circularprogressbar.CircularProgressBar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="35dp"
            android:id="@+id/fetured_comic_progressbar"
            android:layout_height="35dp"
            android:indeterminate="true"
            android:layout_centerInParent="true"
            android:layout_below="@+id/recyclerview_featured_comics"
            app:cpb_color="@color/colorRed"
            app:cpb_colors="@color/colorRed"
            app:cpb_rotation_speed="1.0"
            app:cpb_sweep_speed="1.0"
            app:cpb_stroke_width="4dp"
            app:cpb_min_sweep_angle="10"
            app:cpb_max_sweep_angle="300"
            />

        <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_featured_comics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
        <include layout="@layout/arc_menu"/>

    </RelativeLayout>

</RelativeLayout>
